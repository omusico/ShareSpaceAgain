<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <item name="android:actionBarStyle">@style/MyActionBar</item>
        <!-- Support library compatibility -->
        <item name="actionBarStyle">@style/MyActionBar</item>
        <item name="android:windowContentOverlay">@null</item>
        <!-- Customize your theme here. -->
        <!-- Customize your theme here. -->
    </style>

    <!-- ActionBar styles -->
    <style name="MyActionBar"
        parent="@style/Widget.AppCompat.Light.ActionBar.Solid">
        <item name="android:background">@color/ActionBarBackground</item>
        <!--<item name="android:fontFamily">sans-serif-light</item> -->
        <!--<item name="android:textColorPrimary">@color/primary</item> -->
        <!--<item name="android:textStyle"></item>-->
        <!-- Support library compatibility -->
        <item name="background">@color/ActionBarBackground</item>
        <item name="android:titleTextStyle">@style/MyTheme.ActionBar.TitleTextStyle</item>

        <!-- Support library compatibility -->
        <item name="titleTextStyle">@style/MyTheme.ActionBar.TitleTextStyle</item>
    </style>

    <style name="MyTheme.ActionBar.TitleTextStyle" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@color/ActionBarText</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textSize">20sp</item>
    </style>
    
    <style name="DrawerTextStyleBold">
        <item name="android:textStyle">bold</item>
    </style>
    
    <style name="DrawerTextStyleNormal">
        <item name="android:textStyle">normal</item>
    </style>

    <style name="ListItemTextStyle">
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/ListItemText</item>
    </style>

    
</resources>



